<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#3468E4"
        android:gravity="left"
        android:text="@string/country"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/welcome_textsize"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/nameCountry"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/nameCountry"
        android:textSize="@dimen/welcome_textsize"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="71dp" />

    <ImageView
        android:id="@+id/imageCountry"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        app:srcCompat="@drawable/flagDeafult"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="147dp" />

    <ImageView
        android:id="@+id/imageFood"
        android:layout_width="293dp"
        android:layout_height="486dp"
        android:gravity="center"
        app:srcCompat="@drawable/foodDefault"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="213dp" />

    <TextView
        android:id="@+id/nameFood"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/nameFood"
        android:textSize="@dimen/welcome_textsize"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="577dp" />

</androidx.constraintlayout.widget.ConstraintLayout>